set title "US Population"
set padding 30,10,40,80

set size 1366, 600

declare file data/US.csv

set xdata string
set xdomain $file using 0
set ydata number
set ydomain $file using 1:+9

include functions.chart

set xticks with (
	position bottom
	label-ticks true
	inner-ticks true
)

set yticks with (
	count 15
	label "population (million)"
	position left
	label-ticks true
	inner-ticks true
	format by_million
)

load $file limit 10 using 0,1:+9 with (
	type bar
	width 0.8
)

render tmp/pop.svg