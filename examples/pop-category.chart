set title "US Population"
set padding 30,10,40,60

set size 1366, 600

define file data/US.csv

set xdata string
set xdomain $file using 0
set ydata number
set ydomain $file using 1:+9

set xticks with (
	position bottom
	label-ticks true
	inner-ticks true
)

set yticks with (
	count 15
	label "population (million)"
	position left
	label-ticks true
	inner-ticks true
	format "%.2f"
)

load $file using 0,1:+9 with (
	type bar
	width 0.8
)

render tmp/bar.svg